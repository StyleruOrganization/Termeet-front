{
  "extends": "./ts-base.json",
  "compilerOptions": {
    "baseUrl": "..",
    "types": ["vite/client"],
    "lib": ["ES2022", "DOM"],
    "jsx": "react-jsx",
    "useDefineForClassFields": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "paths": {
      "@/*": ["src/*"],
      "@app/*": ["src/app/*"],
      "@assets/*": ["src/assets/*"],
      "@entities/*": ["src/entities/*"],
      "@features/*": ["src/features/*"],
      "@pages/*": ["src/pages/*"],
      "@shared/*": ["src/shared/*"],
      "@widgets/*": ["src/widgets/*"],
    }
  },
  "include": ["../src/", "../infra/*.ts", "../*.config.ts", "../playwright", "../e2e", "../mockServiceWorker.js"]
}
