{
  "extends": "./ts-base.json",
  "compilerOptions": {
    "types": ["vite/client"],
    "lib": ["ES2022", "DOM"],
    "jsx": "react-jsx",
    "useDefineForClassFields": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "paths": {
      "@/*": ["../src/*"],
      "@pages/*": ["../src/pages/*"],
      "@components/*": ["../src/components/*"],
      "@hooks/*": ["../src/hooks/*"],
      "@shared/*": ["../src/shared/*"],
      "@assets/*": ["../src/assets/*"],
      "@styles/*": ["../styles/*"],
    }
  },
  "include": ["../src", "../infra/*.ts", "../*.config.ts", "../playwright", "../e2e", "../playwright-report/vite.config.ts"]
}
