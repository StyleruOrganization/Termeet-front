{
  "name": "termeet-front",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "prepare": "husky",
    "stylelint:fix": "stylelint **/*.css --cache-location ./node_modules/.stylelintcache --fix",
    "build:tokens": "style-dictionary build -c tokens-config.json",
    "lint:eslint": "eslint . --max-warnings=0",
    "lint:css": "stylelint **/*.css --cache-location ./node_modules/.stylelintcache",
    "type-check": "tsc -b",
    "check-fsd": "steiger ./src",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "pwt:test": "playwright test -c playwright-ct.config.ts",
    "pwt:e2e:test": "NODE_ENV=test playwright test",
    "pwt:screens:update": "docker run --rm -v $(pwd)/src:/app/src -v $(pwd)/playwright-ct.config.ts:/app/playwright-ct.config.ts -v $(pwd)/playwright-report:/app/playwright-report playwright-test:latest pnpm pwt:test"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router": "7.12.0",
    "zod": "^4.3.5",
    "zustand": "^5.0.11"
  },
  "lint-staged": {
    "*.{js,jsx,mjs,ts,tsx}": [
      "npm run lint:eslint",
      "prettier --write ."
    ],
    "*.css": "npm run stylelint:fix"
  },
  "devDependencies": {
    "@cerios/openapi-to-zod": "^1.5.1",
    "@eslint/js": "^9.39.1",    "@feature-sliced/steiger-plugin": "^0.5.7",
    "@playwright/experimental-ct-react": "^1.58.0",
    "@playwright/test": "^1.58.0",
    "@tanstack/eslint-plugin-query": "^5.91.4",
    "@tanstack/react-query": "^5.90.21",
    "@tanstack/react-query-devtools": "^5.91.3",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-fsd-lint": "^1.0.10",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "msw": "^2.12.10",
    "prettier": "^3.7.4",
    "react-calendar": "^6.0.0",
    "react-hook-form": "^7.71.1",
    "steiger": "^0.5.11",
    "style-dictionary": "^5.1.3",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-declaration-strict-value": "^1.10.11",
    "stylelint-order": "^7.0.1",
    "stylelint-selector-bem-pattern": "^4.0.1",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.3.1",
    "vite-plugin-svgr": "^4.5.0"
  },
  "msw": {
    "workerDirectory": [
      "src/shared/mocks"
    ]
  }
}